{% if 'all' in actions %}
{{ route_name_prefix }}:
    path:     /{desde}/{hasta}
    defaults: { _controller: "{{ bundle }}:{{ entity }}:all" }
{% endif %}

{% if 'cant' in actions %}
{{ route_name_prefix }}:
    path:     /cant
    defaults: { _controller: "{{ bundle }}:{{ entity }}:cant" }
{% endif %}

{% if 'get' in actions %}
{{ route_name_prefix }}_get:
    path:     /{id}
    defaults: { _controller: "{{ bundle }}:{{ entity }}:get" }
{% endif %}

{% if 'update' in actions %}
{{ route_name_prefix }}_update:
    path:     /update
    defaults: { _controller: "{{ bundle }}:{{ entity }}:update" }
{% endif %}
