{% if 'all' in actions %}
{{ route_name_prefix }}:
    path:     /{offset}/{limit}/{filter}
    defaults: { _controller: "{{ bundle }}:{{ entity }}:all", filter: false }
    requirements:
        offset: \d+
        limit:	\d+
{% endif %}

{% if 'cant' in actions %}
{{ route_name_prefix }}_cant:
    path:     /cant/{filter}
    defaults: { _controller: "{{ bundle }}:{{ entity }}:cant", filter: false}
{% endif %}

{% if 'get' in actions %}
{{ route_name_prefix }}_get:
    path:     /{id}
    defaults: { _controller: "{{ bundle }}:{{ entity }}:get" }
    requirements:
        id: \d+
{% endif %}

{% if 'update' in actions %}
{{ route_name_prefix }}_update:
    path:     /update/{id}
    defaults: { _controller: "{{ bundle }}:{{ entity }}:update" }
    requirements:
        methods: POST
        id: 	 \d+
{% endif %}
